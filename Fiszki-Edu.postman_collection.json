{
	"info": {
		"name": "Fiszki-Edu API",
		"description": "Kolekcja do obsługi systemu generowania fiszek",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"url": "{{baseUrl}}/auth/register",
						"body": {
							"mode": "raw",
							"raw": "{\"username\": \"user1\", \"email\": \"test@edu.pl\", \"password\": \"haslo12345\"}"
						}
					}
				}
			]
		},
		{
			"name": "Flashcards",
			"item": [
				{
					"name": "Generate AI",
					"request": {
						"auth": { "type": "bearer", "bearer": [{"key": "token", "value": "{{jwt_token}}", "type": "string"}] },
						"method": "POST",
						"url": "{{baseUrl}}/flashcards/generate",
						"body": {
							"mode": "raw",
							"raw": "{\"text\": \"Ziemia krąży wokół Słońca...\"}"
						}
					}
				}
			]
		}
	],
	"variable": [
		{ "key": "baseUrl", "value": "http://localhost:8000" },
		{ "key": "jwt_token", "value": "" }
	]
}